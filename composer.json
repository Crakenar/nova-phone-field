{
    "name": "yieldstudio/nova-phone-field",
    "description": "Nova Phone Number field with a dynamic mask based on the country code inserted by the user.",
    "keywords": [
        "laravel",
        "nova",
        "phone mask",
        "input mask"
    ],
    "homepage": "https://github.com/YieldStudio/nova-phone-field",
    "license": "MIT",
    "authors": [
        {
            "name": "Gustavo Bissolli",
            "email": "gustavo.bissolli@gmail.com",
            "role": "Creator"
        },
        {
            "name": "Yield Studio",
            "email": "contact@yieldstudio.fr",
            "role": "Fork maintener"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/nova": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "YieldStudio\\NovaPhoneField\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YieldStudio\\NovaPhoneField\\FieldServiceProvider"
            ]
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8"
    }
}
